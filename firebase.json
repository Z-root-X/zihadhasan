{
    "firestore": {
        "rules": "firestore.rules"
    },
    "hosting": {
        "public": "out",
        "cleanUrls": true,
        "trailingSlash": false,
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "**/__next*/**"
        ],
        "rewrites": [
            {
                "source": "/blog/**",
                "destination": "/blog/view.html"
            },
            {
                "source": "/courses/**",
                "destination": "/courses/view.html"
            },
            {
                "source": "/learning/**",
                "destination": "/learning/view.html"
            }
        ],
        "redirects": [
            {
                "source": "/admin",
                "destination": "/login",
                "type": 301
            },
            {
                "source": "/admin/login",
                "destination": "/login",
                "type": 301
            }
        ]
    }
}