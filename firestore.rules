rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    
    // Check if the user is an Admin by reading their profile document
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // --- Users Collection (The Core Hub) ---
    match /users/{userId} {
      // Admin can do anything. Owner can read their own profile.
      allow read: if isOwner(userId) || isAdmin();
      
      // Create: Allow user to create their own profile (e.g. on signup)
      allow create: if isOwner(userId);
      
      // Update: Owner can update BUT cannot change email or role
      allow update: if isAdmin() || (
        isOwner(userId) 
        && request.resource.data.email == resource.data.email 
        && request.resource.data.role == resource.data.role
      );
      
      // Delete: Only Admin can delete users (for safety)
      allow delete: if isAdmin();
    }

    // --- Courses Collection (LMS) ---
    match /courses/{courseId} {
      // Public read if published. Admin can read all.
      allow read: if (resource.data.published == true) || isAdmin();
      // Only Admin can manage courses
      allow write: if isAdmin();
    }

    // --- Existing Portfolio Collections (Enhanced Security) ---
    
    match /subscribers/{docId} {
      allow create: if true;
      allow read, delete: if isAdmin();
    }

    match /events/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /projects/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /tools/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /posts/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /registrations/{registrationId} {
      // Allow create if user is authenticated and claiming their own userId
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Allow read if Admin OR if the user owns the registration
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      
      // Allow update, delete: if Admin
      allow update, delete: if isAdmin();
    }
    
    // --- Contact Messages ---
    match /messages/{messageId} {
      allow create: if true; // Public contact form
      allow read, delete: if isAdmin();
    }
    
    // --- User Notifications (Subcollection) ---
    match /users/{userId}/notifications/{notificationId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isAdmin(); // Only system/admin should write, or Cloud Functions
    }

    // --- Default Deny ---
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
