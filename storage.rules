rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check for admin
    // Note: Storage rules have limited access to Firestore. 
    // We rely on Custom Claims (best practice) OR we can use firestore.get() BUT it costs logical reads.
    // For now, let's assume 'admin' claim is present on the auth token or strict path based rules.
    // However, existing system relies on Firestore 'users' collection role.
    // Storage rules `firestore.get` syntax:
    // firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin'
    
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    match /{allPaths=**} {
      // ðŸŸ¢ Public Read: Everyone can see uploaded images (needed for website public assets)
      allow read: if true;
      
      // ðŸ”’ Admin Write: Strict Admin-Only uploads
      allow write: if isAdmin();
    }
  }
}
